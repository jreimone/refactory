   </extension>
   <extension
         point="org.emftext.refactoring.rolemapping">
      <rolemapping
            rolemapping_resource="rolemappings/renameElement.rolemapping">
      </rolemapping>
   </extension>
   <extension
         point="org.emftext.refactoring.submenu">
      <refactoringSubMenu
