<?eclipse version="3.4"?>
<plugin>
	<!-- role mappings -->
	<extension
         point="org.emftext.refactoring.rolemapping">
      <rolemapping
            rolemapping_resource="rolemappings/pullUp.rolemapping">
            <mappingIcon
                  icon="icons/pullUpFeature.gif"
                  mapping_name="PullUpFeature">
            </mappingIcon>
      </rolemapping>
   </extension>

	<extension
         point="org.emftext.refactoring.rolemapping">
      <rolemapping
            rolemapping_resource="rolemappings/deriveCompositeInterface.rolemapping">
      </rolemapping>
   </extension>

   <extension
         point="org.emftext.refactoring.rolemapping">
      <rolemapping
            rolemapping_resource="rolemappings/extractEEnum.rolemapping"
            submenu="extractRefactorings">
            <mappingIcon
                  icon="icons/extractEEnum.gif"
                  mapping_name="ExtractEEnum">
            </mappingIcon>
      </rolemapping>
   </extension>

   <extension
         point="org.emftext.refactoring.rolemapping">
      <rolemapping
            rolemapping_resource="rolemappings/introduceParameterObject.rolemapping">
      </rolemapping>
   </extension>

