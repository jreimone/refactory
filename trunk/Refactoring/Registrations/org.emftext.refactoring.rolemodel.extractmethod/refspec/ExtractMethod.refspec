REFACTORING ExtractMethodRefactoring 
FOR <ExtractMethod>

STEPS { 
	create new nc:NewContainer in ContainerContainer from uptree(INPUT);
	assign nc.newName;
	var index extractsIndex := first(INPUT);
	move OrigContainer.extracts to nc;
	create new mr:MovedReference in OrigContainer from uptree(INPUT) at extractsIndex;
	set use of nc in mr;
} 