<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.qualitune.category"
            name="QualiTune">
      </category>
      <command
            categoryId="org.qualitune.category"
            id="org.qualitune.evolution.ui.prologgeneration.command"
            name="Generate Prolog theory">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.qualitune.evolution.ui.commands.GeneratePrologTheoryHandler"
            commandId="org.qualitune.evolution.ui.prologgeneration.command">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <command
               commandId="org.qualitune.evolution.ui.prologgeneration.command"
               label="Generate facts for model"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        operator="or">
                     <instanceof
                           value="org.eclipse.core.resources.IFile">
                     </instanceof></iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
