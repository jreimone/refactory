<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.eclipse.ui.editors">
		<editor class="org.emftext.language.refactoring.specification.resource.ui.RefspecEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="refspec" icon="icons/editor_icon.gif" id="org.emftext.language.refactoring.specification.resource.ui.RefspecEditor" name="EMFText refspec Editor">
		</editor>
	</extension>
	
	<extension id="org.emftext.language.refactoring.specification.resource.refspec.ui.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.emftext.language.refactoring.specification.resource.ui.RefspecPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Refspec Text Editor" id="org.emftext.language.refactoring.specification.resource.ui.RefspecPreferencePage" class="org.emftext.language.refactoring.specification.resource.ui.RefspecPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.emftext.language.refactoring.specification.resource.ui.RefspecSyntaxColoringPreferencePage" class="org.emftext.language.refactoring.specification.resource.ui.RefspecSyntaxColoringPreferencePage" category="org.emftext.language.refactoring.specification.resource.ui.RefspecPreferencePage">
		</page>
		<page name="Brackets" id="org.emftext.language.refactoring.specification.resource.ui.RefspecBracketPreferencePage" class="org.emftext.language.refactoring.specification.resource.ui.RefspecBracketPreferencePage" category="org.emftext.language.refactoring.specification.resource.ui.RefspecPreferencePage">
		</page>
		<page name="Occurrence" id="org.emftext.language.refactoring.specification.resource.ui.RefspecOccurrencePreferencePage" class="org.emftext.language.refactoring.specification.resource.ui.RefspecOccurrencePreferencePage" category="org.emftext.language.refactoring.specification.resource.ui.RefspecPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.emftext.language.refactoring.specification.resource.ui.RefspecNewFileWizard" id="org.emftext.language.refactoring.specification.resource.ui.RefspecNewFileWizard" name="EMFText .refspec file">
		</wizard>
	</extension>
	
</plugin>
