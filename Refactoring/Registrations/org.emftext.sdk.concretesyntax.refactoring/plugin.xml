<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<!-- Register role mappings -->
	<extension point="org.emftext.refactoring.rolemapping">
		<rolemapping
			rolemapping_resource="rolemapping/concretessyntax.rolemapping">
		</rolemapping>
	</extension>

	<!-- Register context menu -->
	<extension point="org.eclipse.ui.popupMenus">
		<viewerContribution
        	id="org.emftext.refactoring.ui.viewerContribution"
			targetID="org.emftext.sdk.concretesyntax.resource.cs.EditorContext">
			<action
         		class="org.emftext.refactoring.ui.RefactoringAction"
         		id="org.emftext.refactoring.ui.refactor_action"
         		label="EMF Refactor"
         		menubarPath="additions">
			</action>
		</viewerContribution>
	</extension>

</plugin>
